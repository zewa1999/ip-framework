<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape android:shape="oval">
            <gradient android:angle="135" android:endColor="@android:color/holo_blue_bright" android:startColor="@android:color/holo_red_dark" />
            <corners android:radius="20dp" />
            <stroke android:width="2dp" android:color="@android:color/holo_red_dark" />
        </shape>

    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="225" android:endColor="@android:color/holo_blue_bright" android:startColor="@android:color/holo_green_dark" />
            <corners android:radius="45dp" />
            <stroke android:width="3dp" android:color="@android:color/holo_red_dark" />
        </shape>

    </item>
</selector>